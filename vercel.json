{
  "rewrites": [
    { "source": "/", "destination": "/index.html" },
    { "source": "/login", "destination": "/index.html" },
    { "source": "/register", "destination": "/index.html" },
    { "source": "/dashboard", "destination": "/index.html" },
    { "source": "/dashboard/poll/:pollId", "destination": "/index.html" },
    { "source": "/dashboard/vote/:pollId", "destination": "/index.html" },
    { "source": "/(.*)", "destination": "/index.html" },
    {
      "source": "/api/(.*)",
      "destination": "https://pollify-bnzq.onrender.com/api/$1"
    }
  ]
}
